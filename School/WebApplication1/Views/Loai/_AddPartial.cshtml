@model StoreManagement.Models.LoaiModel;

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="title"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="myForm">
                <div class="form-group">
                    <label asp-for="TenLoai" class="control-label">Tên Loại</label>
                    <input id="TenLoai" value="@Model.TenLoai" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Mota" class="control-label">Mô Tả</label>
                    <input id="Mota" asp-for="Mota" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MaLoaiCha" class="control-label">Mã Loại Cha</label>
                    <input id="MaLoaiCha" asp-for="MaLoaiCha" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CreatedBy" class="control-label"></label>
                    <input id="CreatedBy" asp-for="CreatedBy" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CreatedDate" class="control-label"></label>
                    <input id="CreatedDate" asp-for="CreatedDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UpdatedDate" class="control-label"></label>
                    <input id="UpdatedDate" asp-for="UpdatedDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UpdatedBy" class="control-label"></label>
                    <input id="UpdatedBy" asp-for="UpdatedBy" class="form-control" />
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-save" onclick="SubmitForm(@Model.Id)"></button>
        </div>
    </div>
</div>

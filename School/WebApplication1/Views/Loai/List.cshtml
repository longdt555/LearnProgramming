@model StoreManagement.Dtos.Respones.SearchResult<LoaiModel>

@{
    ViewData["Title"] = "Loai";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var paging = Tuple.Create(Model.TotalRecords, Model.PageSize, "Loai");
    var currentPage = Model.CurrentPage;
    var pageSize = Model.PageSize;
    var data = Model.Data.ToList();
}



<div class="row">
    <div class="col-md-12">
        <div class="card" style="margin-bottom: 11px;">
            <div class="card-header">
                <div class="row">

                    <!--<form class="update col-md-2" action="https://localhost:44319/Loai/Add">-->
                    @*<input type="submit" name="submit" class="btn btn-primary btn-round"> </input>*@
                    <!--<input type="submit" name="submit" value="Thêm mới" id="them-loai" onclick="add(event)" class="btn btn-primary btn-round" />

                    </form>-->
                    <form class="update col-md-2">
                        <a href="#" class="btn btn-primary btn-round" onclick="Add(0)">Thêm Loại</a>
                    </form>
                    

                    @*<div class="table-responsive" id="loai-add">
                        @await Html.PartialAsync("_ListPartial2", data)
                    </div>*@


                    <div class="col-md-10">
                        <form name="timkiem" style="width: 300px; padding-top: 11px; " class="pull-right">
                            <div class="form-group form-inline" style="float:right">
                                <input placeholder="Nhập từ khóa" type="text" name="searchkey" id="search-loai" onchange="search(event)" class="form-control form-inline" />
                                <input type="submit" name="submit" value="Tìm Kiếm" class="from-control" onclick="search(event)" id="btn-search" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="thead-content">
                    <thead class=" text-primary">
                        <tr>
                            <th class="w-3p">
                                STT
                            </th>
                            <th class="w-10p">
                                Tên Loại
                            </th>
                            <th class="w-10p">
                                Mô Tả
                            </th>
                            <th class="w-10p">
                                Mã Loại Cha
                            </th>
                            <th class="w-8p">
                                Ngày Tạo
                            </th>
                            <th class="w-10p">
                                Ngày Sửa
                            </th>
                            <th class="w-10p">Thao Tác</th>
                        </tr>
                </table>

                <div class="table-responsive" id="loai-list">
                    @await Html.PartialAsync("_ListPartial", data)
                </div>

                <div class="modal fade" id="myModal1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                                    <h3 class="modal-title">AddEdit</h3>
                                </div>
                                <div class="modal-body" id="myModalBodyDiv1">


                                </div>


                            </div>

                        </div>

                    </div>

                    <input type="hidden" id="hiddenEmployeeId" />


            </div>
        </div>
    </div>
</div>


@*</div>*@
<div style="margin: 0 auto">

    @await Html.PartialAsync("Pagination", paging)
</div>

<script src="~/js/app/loai.js"></script>
<script>
     var currentPage = @currentPage;
    var pageSize = @pageSize;

    function Add(Id) {
        $("#form")[0].reset();
        $("#ModalTitle").html("Thêm Loại");
        $("#MyModal1").modal();
    }
</script>


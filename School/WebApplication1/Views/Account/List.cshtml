@model StoreManagement.Dtos.Respones.SearchResult<AccountModel>

@{
    ViewData["Title"] = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var paging = Tuple.Create(Model.TotalRecords, Model.PageSize, "Account");
}
<div class="row">
    <div class="col-md-12">
        <div class="card" style="margin-bottom: 11px;">
            <div class="card-header">
                <div class="row">
                    <form class="update col-md-2" action="https://localhost:44319/Account/Add">
                        <button type="submit" class="btn btn-primary btn-round">Thêm mới</button>
                    </form>
                    <div class="col-md-10">
                        <form name="timkiem" style="width: 300px; padding-top: 11px; " class="pull-right">
                            <div class="form-group form-inline">
                                <input placeholder="Nhập từ khóa" type="text" name="searchkey" id="search-Account" class="form-control form-inline" />
                                <input type="submit" name="submit" value="Tìm Kiếm" class="from-control" onclick="search(event)" id="btn-search" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="thead-content">
                    <thead class=" text-primary">
                        <tr>
                            <th class="w-5p">
                                STT
                            </th>
                            <th class="w-15p">
                                User Name
                            </th>
                            <th class="w-12p">
                                Created By
                            </th>
                            <th class="w-10p">
                                Updated By
                            </th>
                            <th class="w-10p">
                                Created Date
                            </th>
                            <th class="w-10p">
                                Updated Date
                            </th>
                            <th class="w-8p">Thao tác</th>
                        </tr>
                </table>
                <div class="table-responsive">
                    <table class="table tbl-contents">
                        <tbody>
                            @{
                                var count = 0;
                            }
                            @foreach (var item in Model.Data.ToList())
                            {
                                count++;
                                <tr>
                                    <td class="w-5p">
                                        @count
                                    </td>
                                    <td class="w-15p">
                                        @item.UserName
                                    </td>
                                    <td class="w-12p">
                                        @item.CreatedBy
                                    </td>
                                    <td class="w-10p">
                                        @item.UpdatedBy
                                    </td>
                                    <td class="w-10p">
                                        @item.CreatedDate
                                    </td>
                                    <td class="w-10p">
                                        @item.UpdatedDate
                                    </td>
                                    <td class="w-8p">
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="nc-icon nc-scissors"></i></a> |

                                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="nc-icon nc-simple-remove"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div style="margin: 0 auto">

    @await Html.PartialAsync("Pagination", paging)
</div>

<script>
    function search(event) {
        event.preventDefault();
        var searchTxt = $('#search-Account').val();

        var path = `${window.location.origin}/Account?pageIndex=1&pageSize=20&name=${searchTxt}`;

        window.location.href = path;
    };
</script>
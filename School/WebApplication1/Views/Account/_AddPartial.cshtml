@model StoreManagement.Models.AccountModel;

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="title"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="myForm">
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Tên Tài Khoản</label>
                    <input id="UserName" value="@Model.UserName" class="form-control" longProp="userName" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Mật Khẩu</label>
                    <input id="Password" asp-for="Password" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="Role" class="control-label">Phân Quyền</label>
                    <input id="Role" asp-for="Role" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CreatedBy" class="control-label"></label>
                    <input id="CreatedBy" asp-for="CreatedBy" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CreatedDate" class="control-label"></label>
                    <input id="CreatedDate" asp-for="CreatedDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UpdatedBy" class="control-label"></label>
                    <input id="UpdatedBy" asp-for="UpdatedBy" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UpdatedDate" class="control-label"></label>
                    <input id="UpdatedDate" asp-for="UpdatedDate" class="form-control" />
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-save" onclick="SubmitForm()"></button>
        </div>
    </div>
</div>

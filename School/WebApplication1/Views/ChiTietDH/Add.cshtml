@model StoreManagement.Models.ChiTietDHModel

@{
    ViewData["Title"] = "Add";
}

<link href="~/css/hai.css" rel="stylesheet" type="text/css" />

<div id="contact-form">
    <div>
        <h1>Thêm Chi Tiết Đơn Hàng</h1>
        <p></p>
        <h4>Have a question or just want to get in touch? Let's chat.</h4>
    </div>
    <p id="failure">Oopsie...message not sent.</p>
    <p id="success">Your message was sent successfully. Thank you!</p>

    <script>
        $(() => {
            $('#myForm').submit(e => {
                //e.preventDefault();
                const taikhoan = $('#taikhoan').val().trim()
                const matkhau = $('#matkhau').val().trim()
                const phanquyen = $('#phanquyen').val().trim()

                if (taikhoan.length === 0) {
                    showError('Vui lòng nhập tài khoản')
                    e.preventDefault();
                }
                else if (taikhoan.length < 3) {
                    showError('Tài khoản phải có tối thiểu 6 kí tự')
                    e.preventDefault();
                }
                else if (matkhau.length === 0) {
                    showError('Vui lòng nhập mật khẩu')
                    e.preventDefault();
                }
                else if (phanquyen.length === 0) {
                    showError('Vui lòng nhập phân quyền')
                    e.preventDefault();
                }
                else if (matkhau.length === 6) {
                    showError('Mật khẩu phải có 6 kí tự')
                    e.preventDefault();
                }

            })
        })

        function showError(message) {
            $('.errorMessage').html(message)
            $('.errorMessage').show()
        }
    </script>


    <form asp-action="DoAdd">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MaDH" class="control-label"></label>
            <input asp-for="MaDH" class="form-control" />
            <span asp-validation-for="MaDH" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaHH" class="control-label"></label>
            <input asp-for="MaHH" class="form-control" />
            <span asp-validation-for="MaHH" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DonGia" class="control-label"></label>
            <input asp-for="DonGia" class="form-control" />
            <span asp-validation-for="DonGia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SoLuong" class="control-label"></label>
            <input asp-for="SoLuong" class="form-control" />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreatedBy" class="control-label"></label>

@model StoreManagement.Dtos.Respones.SearchResult<DonHangModel>

@{
    ViewData["Title"] = "DonHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var paging = Tuple.Create(Model.TotalRecords, Model.PageSize, "DonHang");
    var currentPage = Model.CurrentPage;
    var pageSize = Model.PageSize;
    var data = Model.Data.ToList();
}
<div class="row">
    <div class="col-md-12">
        <div class="card" style="margin-bottom: 11px;">
            <div class="card-header">
                <div class="row">
                    <form class="update col-md-2">
                        <a href="#" class="btn btn-primary btn-round" onclick="ShowAddModal(0)">Thêm mới</a>
                    </form>
                    <div class="col-md-10">
                        <button style="margin-left:849px" type="button" onclick="exportAction('DonHang/Export')" class="btn btn-primary">Export Data</button>

                        <form name="timkiem" style="width: 300px; padding-top: 11px; " class="pull-right">
                            <div class="form-group from-inline" style="float:right">
                                <input placeholder="Nhập từ khóa" type="text" name="searchkey" id="search-DonHang" onchange="search(event)" class="form-control form-inline" />
                                <input type="submit" name="submit" value="Tìm Kiếm" class="form-control" onclick="search(event)" id="btn-search" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="thead-content">
                    <thead class=" text-primary">
                        <tr>
                            <th class="w-3p">
                                STT
                            </th>

                            <th class="w-10p">
                                Phí Vận Chuyển
                            </th>
                            <th class="w-5p">
                                Tổng Tiền
                            </th>
                            <th class="w-10p">
                                Trạng Thái Đơn Hàng
                            <th class="w-10p">
                                Trạng Thái Thanh Toán
                            </th>
                            <th class="w-5p">Thao tác</th>
                        </tr>
                </table>

                <div class="table-responsive" id="donhang-list">
                    @await Html.PartialAsync("_ListPartial", data)
                </div>

            </div>
        </div>
    </div>
</div>

<div style="margin: 0 auto">

    @await Html.PartialAsync("Pagination", paging)
</div>

<script src="/js/app/donhang.js"></script>
<script>
    var currentPage = @currentPage;
    var pageSize = @pageSize;
</script>
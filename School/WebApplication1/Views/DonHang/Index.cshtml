@model List<DonHangModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-8">
                        <h4 class="card-title">Đơn Hàng Table</h4>
                    </div>
                    <div class="update col-md-4">
                        <button type="submit" class="btn btn-primary btn-round pull-right">Thêm mới</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table tbl-contents">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Ngày Lập
                                </th>
                                <th>
                                    Phí Vận Chuyển
                                </th>
                                @*<th>
                                    Thành Tiền
                                </th>*@
                                <th>
                                    Tổng Tiền
                                </th>
                                <th>
                                    Trạng Thái Đơn Hàng
                                </th>
                                <th>
                                    Trạng Thái Thanh Toán
                                </th>
                            </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayLap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhiVanChuyen)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.ThanhTien)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.TongTien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrangThaiDonHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrangThaiThanhToan)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="nc-icon nc-scissors"></i></a> |
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="nc-icon nc-spaceship"></i></a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="nc-icon nc-simple-remove"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div style="margin: 0 auto">

    @await Html.PartialAsync("Pagination")
</div>


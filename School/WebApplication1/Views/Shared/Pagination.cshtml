@model Tuple<int, int>
@{
    var totalPages = Model.Item1 % Model.Item2 == 0 ? Model.Item1 / Model.Item2 : Model.Item1 / Model.Item2 + 1;

}
<nav aria-label="Page navigation example" style="margin-top: 0;">
    <p class="pull-left">Total records: @Model.Item1</p>
    <ul class="pagination justify-content-end">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        @for (var i = 1; i <= totalPages; i++)
        {
            <li class="page-item"><a class="page-link" href="/ds-khach-hang?pageIndex=@i&pageSize=@Model.Item2">@i</a></li>
        }

        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>
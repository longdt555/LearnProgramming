@model List<HangHoaModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-8">
                        <h4 class="card-title">Hàng Hóa Table</h4>
                    </div>
                    <div class="update col-md-4">
                        <button type="submit" class="btn btn-primary btn-round pull-right">Thêm mới</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table tbl-contents">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Tên Hàng Hóa
                                </th>
                                <th>
                                    Số Lượng
                                </th>
                                <th>
                                    Đơn giá
                                </th>
                                <th>
                                    Giảm giá
                                </th>
                                <th>
                                    Chi Tiết
                                </th>
                            </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenHH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DonGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiamGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ChiTiet)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="nc-icon nc-scissors"></i></a> |
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="nc-icon nc-spaceship"></i></a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="nc-icon nc-simple-remove"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div style="margin: 0 auto">

    @await Html.PartialAsync("Pagination")
</div>


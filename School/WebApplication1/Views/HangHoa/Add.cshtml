<script>


    const TenHH = document.getElementById('TenHH')
    const TenLoai = document.getElementById('TenLoai')
    //const soLuong = document.getElementById('soluong')
    const form = document.getElementById('form')
    const errorElement = document.getElementById('error')

    form.addEventListener('submit', (e) => {
        let messages = []
        if (TenHH.value === '' || TenHH.value == null) {
            messages.push('Ten hang hoa is required')
        }
        if (TenLoai.value === '' || TenLoai.value == null) {
            messages.push('Ten loai is required')
        }
        if (messages.length > 0) {
            e.preventDefault()
            errorElement.innerText = messages.join(', ')
        }

    })
</script>


